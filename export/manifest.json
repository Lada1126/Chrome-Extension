

{
  "manifest_version": 2,
  "name": "Screen size and Inner size spoofing",
  "version": "1.0.0",
  "background": {
    "scripts": ["background-script.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "<all_urls>",
    "webRequest",
    "webRequestBlocking"
    ]
}

    